{
    "name": "electrocornea",
    "version": "0.1.6",
    "description": "ElectroCornea desktop client",
    "main": "src/core/main.js",
    "scripts": {
        "start": "yarn preprocess && electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder",
        "postinstall": "electron-builder install-app-deps",
        "release": "electron-builder build",
        "preprocess": "npx tailwind build src/gui/styles.css -o src/gui/preprocessed.css"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ouracademy/electrocornea.git"
    },
    "devDependencies": {
        "electron": "7.1.2",
        "electron-builder": "^21.2.0",
        "prettier": "1.19.1"
    },
    "build": {
        "appId": "org.our-academy.electrocornea",
        "productName": "ElectroCornea",
        "copyright": "Copyright Â© 2019 Ouracademy",
        "publish": [
            "github"
        ],
        "win": {
            "target": [
                {
                    "target": "nsis",
                    "arch": [
                        "x64",
                        "ia32"
                    ]
                }
            ]
        }
    },
    "dependencies": {
        "axios": "^0.19.0",
        "chokidar": "^3.3.1",
        "csv-parser": "^2.3.2",
        "electron-store": "^5.1.0",
        "electron-updater": "^4.2.0",
        "tailwindcss": "^1.1.4",
        "winston": "^3.2.1",
        "winston-mongodb": "^5.0.1"
    }
}